<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/brend" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_radiobutton_on"
                    android:tint="@color/selected_bg" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="false">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/ic_radiobutton_off"
                    android:tint="@color/selected_bg" />
            </item>
        </layer-list>
    </item>
</selector>