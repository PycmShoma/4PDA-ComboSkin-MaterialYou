<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="0dp"
    android:insetRight="0dp"
    android:insetTop="0dp"
    android:insetBottom="0dp">
    <selector>
        <item android:state_focused="false">
            <shape android:shape="rectangle">
                <padding
                    android:left="8dp"
                    android:top="8dp"
                    android:right="8dp"
                    android:bottom="8dp" />
                <corners android:radius="20dp" />
                <solid android:color="@color/edit_nofocus_bg" />
                <stroke
                    android:width="2dp"
                    android:color="@color/selected_bg" />
            </shape>
        </item>
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <padding
                    android:left="8dp"
                    android:top="8dp"
                    android:right="8dp"
                    android:bottom="8dp" />
                <corners android:radius="20dp" />
                <solid android:color="@color/edit_nofocus_bg" />
                <stroke
                    android:width="2dp"
                    android:color="@color/selected_bg" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <padding
                    android:left="8dp"
                    android:top="8dp"
                    android:right="8dp"
                    android:bottom="8dp" />
                <corners android:radius="20dp" />
                <solid android:color="@color/edit_nofocus_bg" />
                <stroke
                    android:width="2dp"
                    android:color="@color/selected_bg" />
            </shape>
        </item>
    </selector>
</inset>
