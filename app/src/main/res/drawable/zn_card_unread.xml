<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        android:state_pressed="false">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_unread"
                    android:tint="@color/zn_main_text" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="false"
        android:state_pressed="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="true"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/zn_brend" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_unread"
                    android:tint="@color/zn_main_text" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="false"
        android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <solid
                        android:color="@color/zn_brend" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>