<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        android:state_pressed="false">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_radiobutton_on"
                    android:tint="@color/zn_selected_bg" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="false">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_radiobutton_off"
                    android:tint="@color/zn_selected_bg" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="true"
        android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_radiobutton_on"
                    android:tint="@color/zn_selected_bg" />
            </item>
        </layer-list>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap
                    android:gravity="center"
                    android:src="@drawable/zn_ic_radiobutton_off"
                    android:tint="@color/zn_selected_bg" />
            </item>
        </layer-list>
    </item>
</selector>